rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Restaurant Business Planner App - User data isolation
    match /artifacts/{appId}/users/{userId} {
      // Users can only access their own data (no anonymous access)
      allow read, write: if request.auth != null && 
        request.auth.uid == userId && 
        request.auth.token.firebase.sign_in_provider != 'anonymous';
      
      // Business plan data
      match /business_plan/{document=**} {
        allow read, write: if request.auth != null && 
          request.auth.uid == userId && 
          request.auth.token.firebase.sign_in_provider != 'anonymous';
      }
      
      // Progress tracking data
      match /progress/{document=**} {
        allow read, write: if request.auth != null && 
          request.auth.uid == userId && 
          request.auth.token.firebase.sign_in_provider != 'anonymous';
      }
      
      // Draft data
      match /drafts/{draftId} {
        allow read, write: if request.auth != null && 
          request.auth.uid == userId && 
          request.auth.token.firebase.sign_in_provider != 'anonymous';
      }
      
      // Draft metadata
      match /metadata/{document=**} {
        allow read, write: if request.auth != null && 
          request.auth.uid == userId && 
          request.auth.token.firebase.sign_in_provider != 'anonymous';
      }
      
      // Vendor data
      match /vendors/{vendorId} {
        allow read, write: if request.auth != null && 
          request.auth.uid == userId && 
          request.auth.token.firebase.sign_in_provider != 'anonymous';
      }
      
      // Equipment data
      match /equipment/{equipmentId} {
        allow read, write: if request.auth != null && 
          request.auth.uid == userId && 
          request.auth.token.firebase.sign_in_provider != 'anonymous';
      }
      
      // Plate styles data
      match /plateStyles/{plateStyleId} {
        allow read, write: if request.auth != null && 
          request.auth.uid == userId && 
          request.auth.token.firebase.sign_in_provider != 'anonymous';
      }
      
      // Menu data
      match /menu/{document=**} {
        allow read, write: if request.auth != null && 
          request.auth.uid == userId && 
          request.auth.token.firebase.sign_in_provider != 'anonymous';
      }
      
      // Financial data
      match /financial/{document=**} {
        allow read, write: if request.auth != null && 
          request.auth.uid == userId && 
          request.auth.token.firebase.sign_in_provider != 'anonymous';
      }
    }
    
    // Sharing collection - allows users to share drafts with others
    match /artifacts/{appId}/shares/{shareId} {
      // Users can read shares where they are the owner or the person being shared with
      // Note: emails are stored in lowercase by sharingService, and Firebase Auth emails are typically lowercase
      allow read: if request.auth != null && 
        request.auth.token.firebase.sign_in_provider != 'anonymous' &&
        (resource.data.ownerId == request.auth.uid || 
         (request.auth.token.email != null && 
          resource.data.sharedWithEmail == request.auth.token.email));
      
      // Users can create shares if they are authenticated and not anonymous
      allow create: if request.auth != null && 
        request.auth.token.firebase.sign_in_provider != 'anonymous' &&
        request.resource.data.ownerId == request.auth.uid;
      
      // Users can update shares if they are the owner or the person being shared with
      // (for accepting/declining invitations)
      allow update: if request.auth != null && 
        request.auth.token.firebase.sign_in_provider != 'anonymous' &&
        (resource.data.ownerId == request.auth.uid || 
         (request.auth.token.email != null && 
          resource.data.sharedWithEmail == request.auth.token.email));
      
      // Only owners can delete shares
      allow delete: if request.auth != null && 
        request.auth.token.firebase.sign_in_provider != 'anonymous' &&
        resource.data.ownerId == request.auth.uid;
    }
    
    // Public read-only data (like equipment templates, vendor directories) - no anonymous access
    match /public/{document=**} {
      allow read: if request.auth != null && 
        request.auth.token.firebase.sign_in_provider != 'anonymous';
      allow write: if false; // Only admins can write to public data
    }
    
    // Admin-only collections
    match /admin/{document=**} {
      allow read, write: if request.auth != null && 
        request.auth.token.admin == true;
    }
    
    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
